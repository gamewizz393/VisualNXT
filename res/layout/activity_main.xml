<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/callCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="87dp"
        android:text="Camera" 
        android:onClick="callCamera"/>

    <Button
        android:id="@+id/callFileDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/callCamera"
        android:layout_alignBottom="@+id/callCamera"
        android:layout_marginLeft="56dp"
        android:layout_toRightOf="@+id/callCamera"
        android:onClick="callFileDisplay"
        android:text="Files" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/callCamera"
        android:layout_centerVertical="true"
        android:text="Button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/callFileDisplay"
        android:layout_centerVertical="true"
        android:text="Button" />

</RelativeLayout>
